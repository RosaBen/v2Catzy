<div class="container">

  <h1 class="mt-5 mb-5">Modifier mon Profil</h1>

  <div class="card position-relative w-75 mx-auto p-4 mb-5">

    <%= form_with model: @user, url: profil_path, method: :patch, local: true, html: {
      multipart: true 
    } do |f| %>

      <div class="field">
        <%= f.label :first_name, "Prénom"%><br>
        <%= f.text_field :first_name, value: @user.first_name, class: "form-control"  %>
      </div>

      <div class="field mt-4">
        <%= f.label :last_name, "Nom"%><br>
        <%= f.text_field :last_name, value: @user.last_name, class: "form-control"  %>
      </div>

      <div class="field mt-4">
        <%= f.label :email, "Email"%><br>
        <%= f.email_field :email, value: @user.email, class: "form-control"  %>
      </div>

      <div class="field mt-4">
        <%= f.label :avatar, "Avatar"%><br>
        
        <% if @user.avatar.attached? %>
          <%= user_avatar(@user, class: "avatar-profil-edit") %>
          <br>
        <% else %>
          <%= user_avatar(@user, class: "avatar-profil-edit") %>
          <br>
          <small class="text-muted">Avatar par défaut affiché ci-dessus</small>
        <% end %>

        <div class="file-upload-wrapper mt-2">
          <%= f.file_field :avatar, class: "file-upload-input" %>
        </div>
      </div>

      <div class="actions mt-5 text-center">
        <%= f.submit "Mettre à jour mon profil", class: "btn btn-primary" %>
      </div>
      <div class=" mt-3 text-center">
        <%= link_to "Annuler", profil_path, class: "btn btn-primary btn-sm" %>
      </div>

    <% end %>
  </div>

</div>